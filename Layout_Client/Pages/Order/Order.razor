            toastClass = "bg-success";
            await Task.Delay(2000);
            Navigation.NavigateTo("/orders");
        }
        else if (orderRequest.PaymentMethod == "MoMo")
        {
            var (order, error) = await OrderService.CreateOrderAsync(restaurantID, orderRequest, orderDetails);
            if (order == null)
