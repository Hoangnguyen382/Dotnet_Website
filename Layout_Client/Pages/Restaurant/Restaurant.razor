@page "/restaurants"
@using Layout_Client.Model.DTO
@using Layout_Client.Service
@inject RestaurantService RestaurantService

<div class="container py-5">
    <!-- √î t√¨m ki·∫øm -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="input-group shadow-sm">
                <input type="text" class="form-control" placeholder="üîç T√¨m nh√† h√†ng..."
                       @bind="searchTerm" />
                <button class="btn btn-primary" @onclick="SearchRestaurants">
                    <i class="fas fa-search me-1"></i> T√¨m ki·∫øm
                </button>
            </div>
        </div>
    </div>

    <!-- Danh s√°ch nh√† h√†ng -->
    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3">ƒêang t·∫£i nh√† h√†ng...</p>
        </div>
    }
    else if (restaurants == null || restaurants.Count == 0)
    {
        <div class="alert alert-warning text-center">Kh√¥ng t√¨m th·∫•y nh√† h√†ng n√†o.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var restaurant in restaurants)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card border-0 shadow h-100">
                        <img src="@restaurant.LogoUrl" class="card-img-top rounded-top" style="height: 180px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold text-primary">@restaurant.Name</h5>
                            <p class="text-muted small flex-grow-1">@restaurant.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="badge bg-@(restaurant.IsActive ? "success" : "danger")">
                                    @(restaurant.IsActive ? "ƒêang M·ªü" : "ƒê√≥ng C·ª≠a")
                                </span>
                                <a class="btn btn-sm btn-outline-primary" href="/restaurant/@restaurant.RestaurantID">
                                    Th·ª±c ƒë∆°n
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<RestaurantResponseDTO>? restaurants;
    private bool isLoading = true;
    private string searchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadRestaurants();
    }

    private async Task LoadRestaurants()
    {
        isLoading = true;
        restaurants = await RestaurantService.GetAllRestaurantAsync(searchTerm, 1, 100);
        isLoading = false;
    }

    private async Task SearchRestaurants()
    {
        await LoadRestaurants();
    }
}
