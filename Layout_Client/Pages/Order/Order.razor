        if (string.IsNullOrWhiteSpace(orderRequest.PhoneNumber))
        {
            toastMessage = "‚ùå Vui l√≤ng nh·∫≠p s·ªë ƒëi·ªán tho·∫°i!";
            toastClass = "bg-danger";
            return;
        }
        
